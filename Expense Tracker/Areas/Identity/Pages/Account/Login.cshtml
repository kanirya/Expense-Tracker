

@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expense Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/28.1.33/material.css" /> *@
    <link href="https://cdn.syncfusion.com/ej2/28.1.33/bootstrap5-dark.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/Expense_Tracker.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/28.1.33/dist/ej2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container mt-5 ">
        <div class="row justify-content-center ">
            <!-- Login Section -->
            <div class="col-lg-5 col-md-7  " >
                <div class="card shadow-lg">
                    <div class="card-header  text-white text-center" style="color: #000;" >
                        <h3 class="large-text">Log In</h3>
                    </div>
                    <div class="card-body ">
                        <form id="account" method="post">
                            <h5 class="text-center mb-4 large-text">Use a local account to log in</h5>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            <!-- Email Field -->
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label fw-bold">Email</label>
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label fw-bold">Password</label>
                                <input asp-for="Input.Password" class="form-control " type="password" placeholder="Password" autocomplete="Name" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            
                            <!-- Remember Me Checkbox -->
                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                                <label class="form-check-label" for="rememberMe">
                                    Remember Me
                                </label>
                            </div><div class="mb-3">
                                <button type="submit" class="btn btn-dark w-100">Log in</button>
                            </div>
                            <!-- Links -->
                            <div class="text-start mt-3">
                                <h6><a id="forgot-password" class="small-bold-text" asp-page="./ForgotPassword">Forgot your password?</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
         
        </div>
    </div>
   @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
