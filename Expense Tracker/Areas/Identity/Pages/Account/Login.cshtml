

@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center ">
            <!-- Login Section -->
            <div class="col-lg-5 col-md-7">
                <div class="card shadow-lg">
                    <div class="card-header  text-white text-center" style="  background-color: #12161d;">
                        <h3>Log In</h3>
                    </div>
                    <div class="card-body">
                        <form id="account" method="post">
                            <h5 class="text-center mb-4">Use a local account to log in</h5>
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                            <!-- Email Field -->
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label fw-bold">Email</label>
                                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label fw-bold">Password</label>
                                <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            
                            <!-- Remember Me Checkbox -->
                            <div class="form-check mb-3">
                                <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMe" />
                                <label class="form-check-label" for="rememberMe">
                                    Remember Me
                                </label>
                            </div><div class="mb-3">
                                <button type="submit" class="btn btn-dark w-100">Log in</button>
                            </div>
                            <!-- Links -->
                            <div class="text-center mt-3">
                                <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- External Login Section -->
            <div class="col-lg-5 col-md-7 mt-4 mt-md-0">
                <div class="card shadow-lg">
                    <div class="card-header bg-secondary text-white text-center">
                        <h3>External Login</h3>
                    </div>
                    <div class="card-body">
                        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="alert alert-warning text-center">
                                <p>There are no external authentication services configured.</p>
                                <p>
                                    See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">article</a>
                                    about setting up external services.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="d-grid gap-2">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                            Log in with @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
