<style>

    .animated-button {
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #007BFF;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        outline: none;
        transition: all 0.3s ease-in-out;
        position: relative;
        overflow: hidden;
    }

        /* Hover Effect */
        .animated-button:hover {
            background-color: #0056b3;
            transform: scale(1.1);
        }

        /* Optional Shine Effect */
        .animated-button::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: rgba(255, 255, 255, 0.3);
            transform: rotate(45deg);
            transition: all 0.5s;
            opacity: 0;
            z-index: 1;
        }

        .animated-button:hover::before {
            opacity: 1;
            top: 0%;
            left: 0%;
        }

        /* Text on top */
        .animated-button span {
            position: relative;
            z-index: 2;
        }
</style>



