@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Roles";
    var myMap = new Dictionary<string, string>
    {
        { "Add Role", "/Roles/Create" },
    };

    // Store it in ViewData
    ViewData["navButtons"] = myMap;
}

<div class="row">
    <div class="col-md-4">
        <form method="post" id="roleForm">
            <h2>Create Role</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" id="roleName" aria-required="true" oninput="validateForm()" />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary my-3" id="submitButton" disabled>Save</button>
        </form>
    </div>
</div>

<script>
    function validateForm() {
        const roleName = document.getElementById('roleName').value.trim();
        const submitButton = document.getElementById('submitButton');
        if (roleName.length > 0) {
            submitButton.disabled = false;
        } else {
            submitButton.disabled = true;
        }
    }
</script>
