@model List<Expense_Tracker.Models.DTOs.ProductVM>

    @{
    }
<!DOCTYPE html>
<html>
<head>
    <title>Order Summary</title>
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">

    <style>
      
    </style>

</head>

<body>


    <partial name="_POSPartial" />
    
    <div class="" style="margin-top:70px;"  >
        <h2>Order Summary</h2>

        @if (Model != null && Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>Rs @item.Price</td>
                            <td>@item.quantity</td>
                            <td>Rs @(item.Price * item.quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>

            <h3>Total: Rs @(Model.Sum(i => i.Price * i.quantity))</h3>
            <a href="/" class="btn btn-primary">Go Back</a>
        }
        else
        {
            <p>No items in the cart.</p>
        }
    </div>
</body>
</html>
