@using Microsoft.AspNetCore.Identity
@using Expense_Tracker.Areas.Identity.Data
@inject UserManager<ApplicationUser> UserManager

<div class="appbar">
    <button class="toggle-btn" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>
    <h3>@(ViewData["Title"] ?? "Expense Tracker")</h3>
    <div class="d-flex">
        @if (ViewData["navButtons"] is Dictionary<string, string> navButtons)
        {
            foreach (var button in navButtons)
            {
                <a href="@button.Value" class="btn btn-dark text-white mx-2">@button.Key</a>
            }
        }
        <partial name="_LoginPartial" />
    </div>
</div>

<div class="main-container d-flex">
    <div class="sidebar" id="side_nav">
        <div class="header-box">
            <h1 class="fs-4">
                <span class="bg-white text-dark rounded shadow px-2 me-2">CL</span>
                DIDIBYTE
            </h1>
        </div>
        <ul class="menu">
            <li>
                <a href="/" class="d-flex align-items-center text-decoration-none text-white py-2 px-3">
                    <i class="fas fa-home me-2"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="/Transaction" class="d-flex align-items-center text-decoration-none text-white py-2 px-3">
                    <i class="fa-solid fa-shop"></i> Point Of Sale
                </a>
            </li>
            <li>
                <a href="/Expenses" class="d-flex align-items-center text-decoration-none text-white py-2 px-3">
                    <i class="fa-solid fa-arrow-right-arrow-left me-2"></i> Expenses
                </a>
            </li>
            <li>
                <a href="/Inventory" class="d-flex align-items-center text-decoration-none text-white py-2 px-3">
                    <i class="fa-slid fa-boxes-stacked me-2"></i> Inventory
                </a>
            </li>
            <li>
                <a href="/Reports" class="d-flex align-items-center text-decoration-none text-white py-2 px-3">
                    <i class="fas fa-chart-simple me-2"></i> Reports
                </a>
            </li>
            <li>
                <a href="/Users" class="d-flex align-items-center text-decoration-none text-white py-2 px-3">
                    <i class="fas fa-users me-2"></i> Users
                </a>
            </li>
            <li>
                <a href="/Settings" class="d-flex align-items-center text-decoration-none text-white py-2 px-3">
                    <i class="fas fa-gear me-2"></i> Settings
                </a>
            </li>
        </ul>
    </div>
    <div class="content" id="content_area">
        @RenderBody()
    </div>
</div>

<style>

</style>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('side_nav');
        sidebar.classList.toggle('active');
    }
</script>
