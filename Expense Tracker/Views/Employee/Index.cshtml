@model IEnumerable<Expense_Tracker.Models.Employee>

@{
    ViewData["Title"] = "Employee";

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<table class="employee-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                    <a class="btn btn-edit" asp-action="Details" asp-route-id="@item.Id">Edit</a> 
                <a  class="btn btn-edit" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                   
            </td>
        </tr>
}
    </tbody>
</table>
